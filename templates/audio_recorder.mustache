{{!
    @template qtype_recordrtc/audio_recorder

    Audio recorder widget.

    Context variables required for this template:
    * maxrecordingduration: Length limit (in seconds) for the recording.
    * allowpausing: whether this question allows the recording to be paused.
    * hasrecording: boolean - whether there is already a recording.
    * recordingurl: the URL of that recording (empty string if none).
    * candownload: whether the current user should see options to download the recordings.
    * enablereflection: whether reflection is enabled.
    * reflectiontime: reflection and preview time in seconds.

    Example context (json):
    {
        "filename": "recording.ogg",
        "widgetname": "recording",
        "maxrecordingduration": 30,
        "allowpausing": true,
        "hasrecording": false,
        "recordingurl": "http://example.com/moodle/draftfile.php?...",
        "candownload": true,
        "enablereflection": false,
        "reflectiontime": 10
    }
}}
<span class="qtype_recordrtc-audio-widget d-inline-flex mw-100 my-1"
      data-media-type="audio"
      data-widget-name="{{widgetname}}"
      data-state="preview"
      data-max-recording-duration="{{maxrecordingduration}}"
      data-preview-time="{{reflectiontime}}"
      data-recording-filename="{{filename}}"
      data-convert-to-mp3="1"
      data-enablereflection="{{enablereflection}}"
      data-reflectiontime="{{reflectiontime}}">

    <span class="qtype_recordrtc-preview-placeholder flex-grow-1 text-center">
        {{#str}}previewingquestion, qtype_recordrtc, {{reflectiontime}}{{/str}}
    </span>
    <span class="qtype_recordrtc-no-recording-placeholder flex-grow-1 text-center hide">
        {{#str}}norecording, qtype_recordrtc{{/str}}
    </span>
    <span class="qtype_recordrtc-time-left flex-grow-1 text-center hide position-relative">
        {{> qtype_recordrtc/progress_bar }}
    </span>
    <span class="qtype_recordrtc-media-player flex-grow-1 hide">
        <audio controls class="w-100, mw-100"{{^candownload}} oncontextmenu="return false;" controlsList="nodownload"{{/candownload}}>
            <source src="{{recordingurl}}">
        </audio>
    </span>
    {{#allowpausing}}
        <span class="qtype_recordrtc-pause-button hide">
            <button type="button" data-pause="1" class="btn btn-secondary osep-smallbutton ml-1 mr-0">
                {{#str}}pause, qtype_recordrtc{{/str}}
            </button>
        </span>
    {{/allowpausing}}
    <span class="qtype_recordrtc-finish-button hide">
        <button type="button" class="btn btn-primary osep-smallbutton ml-1 mr-0 text-nowrap">
            {{#str}}finishrecording, qtype_recordrtc{{/str}}
        </button>
    </span>
    {{#enablereflection}}
        <button id="show-question-button-{{widgetname}}" class="btn btn-primary hide" disabled>
            {{#str}}showquestion, qtype_recordrtc{{/str}}
        </button>
        <div id="reflection-timer-{{widgetname}}" class="reflection-timer hide">
            {{#str}}reflectiontime_remaining, qtype_recordrtc, {{reflectiontime}}{{/str}}
        </div>
    {{/enablereflection}}
</span>